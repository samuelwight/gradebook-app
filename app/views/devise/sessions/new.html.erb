<h2 class="ui teal header">Welcome back! Sign in here.</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'ui large form'}) do |f| %>
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
  <% end %>
  <div class="ui stacked segment">
    <div class="field">
      <div class="ui left icon input">
        <i class="user icon"></i>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email address' %>
      </div>
    </div>

    <div class="field">
      <div class="ui left icon input">
        <i class="lock icon"></i>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <div class="ui checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: 'ui fluid large teal submit button' %>
    </div>
  </div>
<% end %>

<div class="ui message">
  <%= render "devise/shared/links" %>
</div>
